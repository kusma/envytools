	</reg32>
	<reg32 offset="0x00b" name="LOAD_SYNCPT_BASE" />
	<reg32 offset="0x00c" name="INCR_SYNCPT_BASE">
		<bitfield name="OFFSET" low="0" high="23" />
		<bitfield name="BASE_IDX" low="24" high="31" />
	</reg32>
</domain>

